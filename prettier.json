{
  "$schema": "https://json.schemastore.org/eslintrc.json",

  "extends": ["plugin:prettier/recommended"],

  "rules": {
    "arrow-body-style": [
      "error", "as-needed"
    ],
    "curly": "error"
  },
  "overrides": [
    {
      "files": ["*.toml", ".*.toml"],
      "extends": ["plugin:toml/standard"],
      "parser": "toml-eslint-parser",

      "rules": {
        "prettier/prettier": "off"
      }
    }
  ]
}
